{
  "name": "jobber-auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/jobber-auth/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["generate-prisma-client"],
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "jobber-auth:build",
        "runBuildTargetDependencies": true
      },
      "configurations": {
        "development": {
          "buildTarget": "jobber-auth:build:development"
        },
        "production": {
          "buildTarget": "jobber-auth:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      },
      "dependsOn": ["generate-prisma-client"]
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/jobber-auth/Dockerfile . -t jobber-auth"
    },
    "generate-prisma-client": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma generate",
        "cwd": "apps/jobber-auth"
      }
    },
    "migrate": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "dev",
      "options": {
        "command": "prisma migrate dev",
        "cwd": "apps/jobber-auth"
      },
      "configurations": {
        "production": {
          "command": "prisma migrate deploy",
          "cwd": "apps/jobber-auth"
        },
        "dev": {
          "command": "prisma migrate dev",
          "cwd": "apps/jobber-auth"
        }
      }
    }
  }
}
