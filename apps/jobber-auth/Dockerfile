FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system jobber-auth && \
          adduser --system -G jobber-auth jobber-auth

COPY apps/jobber-auth jobber-auth/
RUN chown -R jobber-auth:jobber-auth .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix jobber-auth --omit=dev -f install

CMD [ "node", "jobber-auth" ]
